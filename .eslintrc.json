{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2021
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "eqeqeq": "error",
    "semi": "error",
    "no-shadow": "error"
  },
  "env": {
    "node": true,
    "browser": true,
    "mocha": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "ignorePatterns": [
    "_site/**"
  ]
}
