{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2021
  },
  "plugins": ["prettier", "@typescript-eslint"],
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "rules": {
    "prettier/prettier": "error",
    "eqeqeq": "error",
    "semi": "error",
    "no-shadow": "error"
  },
  "env": {
    "node": true,
    "browser": true,
    "mocha": true,
    "es6": true
  },
  "ignorePatterns": ["_site/**"]
}
